extend layout 

block content

    if posts.length > 0

        div.posts-container

            each post in posts 

                div.posts

                    div.post-preview

                        div.post-title
                            a(href=post.url) #{post.title} 
                        
                        if post.body.length > 50
                            div.post-body #{post.body.substring(0, 50) + "..."} 

                        else
                            div.post-body #{post.body} 

                    div.post-timestamp #{post.formattedTimestamp}